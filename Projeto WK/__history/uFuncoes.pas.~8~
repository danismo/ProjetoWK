unit uFuncoes;

interface

function BuscaSplash(pTable, pFieldRetorno: string): string;
function FormataVlr(sTexto:String): string;

implementation

uses
  uDM;

function BuscaSplash(pTable, pFieldRetorno: string): string;
begin

end;

function FormataVlr(sTexto:String): string;
var
  sVlr: UnicodeString;
  nVlr: Currency;
begin
  sVlr := sTexto;
  if TryStrToCurr(sVlr, nVlr) then Result := FormatFloat('##0.00', nVlr)
  else                             Result := '0,00';
end;

end.
